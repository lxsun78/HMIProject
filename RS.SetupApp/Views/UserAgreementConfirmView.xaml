<rs:RSDialog
    x:Class="RS.SetupApp.Views.UserAgreementConfirmView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RS.SetupApp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:rs="https://github.com/luo-ross/MultiVerseKit"
    Width="380"
    Height="250"
    HorizontalAlignment="Center"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid x:Name="ProjectForm" Background="#fff">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Border
                x:Name="Border"
                Padding="25,15,15,15"
                Focusable="True">
                <StackPanel VerticalAlignment="Center" Orientation="Vertical">
                    <TextBlock
                        x:Name="TxtConfirmDes"
                        Style="{StaticResource RSApp.Styles.TextBlockStyle}"
                        Text="你确定要删除所选图像吗?"
                        TextWrapping="WrapWithOverflow" />
                    <CheckBox
                        x:Name="CkIsDeleteFileFromSystem"
                        Margin="5"
                        HorizontalAlignment="Left"
                        Content="同时从文件系统删除"
                        Style="{StaticResource RSApp.Styles.AgreementCheckStyle}" />
                </StackPanel>
            </Border>
            <Border
                Grid.Row="1"
                Padding="0,3,0,3"
                Background="#eee">
                <StackPanel
                    MinHeight="20"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <rs:RSButton
                        x:Name="BtnClose"
                        BtnColorType="Light"
                        BtnType="Standard"
                        Click="BtnClose_Click"
                        Content="取消" />
                    <rs:RSButton
                        x:Name="BtnOK"
                        BtnColorType="Primary"
                        BtnType="Standard"
                        Click="BtnOK_Click"
                        Content="确定" />
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</rs:RSDialog>
