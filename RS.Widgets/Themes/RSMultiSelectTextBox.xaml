<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:RS.Widgets.Converters"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:model="clr-namespace:RS.Widgets.Models"
    xmlns:rs="clr-namespace:RS.Widgets.Controls">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/RS.Widgets;component/Styles/Controls.Button.xaml" />
        <ResourceDictionary Source="pack://application:,,,/RS.Widgets;component/Styles/Controls.Templates.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type rs:RSMultiSelectTextBox}">
        <Setter Property="Background" Value="#fff" />
        <Setter Property="BorderBrush" Value="#eeeeee" />
        <Setter Property="Foreground" Value="#333" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="KeyboardNavigation.TabNavigation" Value="None" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="AllowDrop" Value="true" />
        <Setter Property="ScrollViewer.PanningMode" Value="VerticalFirst" />
        <Setter Property="Stylus.IsFlicksEnabled" Value="False" />
        <Setter Property="Margin" Value="3,3,3,3" />
        <Setter Property="Padding" Value="2,3,2,3" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="HorizontalScrollBarVisibility" Value="Hidden" />
        <Setter Property="VerticalScrollBarVisibility" Value="Auto" />
        <Setter Property="TextWrapping" Value="NoWrap" />
        <Setter Property="ClipToBounds" Value="True" />
        <Setter Property="rs:ControlsHelper.CornerRadius" Value="3" />
        <Setter Property="rs:TextBoxHelper.IsShowClearButton" Value="False" />
        <Setter Property="rs:ControlsHelper.DesForeground" Value="#6B7280" />
        <Setter Property="VerticalScrollBarVisibility" Value="Disabled" />
        <Setter Property="rs:TextBoxHelper.WatermarkForground" Value="#949494" />
        <Setter Property="Validation.ErrorTemplate" Value="{StaticResource RSApp.Templates.DefaultDataError}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type rs:RSMultiSelectTextBox}">
                    <Border
                        x:Name="border"
                        Padding="{TemplateBinding Padding}"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding rs:ControlsHelper.CornerRadius}"
                        SnapsToDevicePixels="True">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="auto" />
                            </Grid.ColumnDefinitions>
                            <ContentControl
                                x:Name="PART_Watermark"
                                Grid.Column="0"
                                Margin="2,0,0,0"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                Content="{TemplateBinding rs:TextBoxHelper.Watermark}"
                                FontSize="{TemplateBinding FontSize}"
                                Foreground="{TemplateBinding rs:TextBoxHelper.WatermarkForground}"
                                Visibility="Collapsed" />

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <ItemsControl x:Name="PART_TagHost" ItemsSource="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=TagModelList}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel IsItemsHost="True" Orientation="Horizontal" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate DataType="{x:Type model:TagModel}">
                                            <Border
                                                x:Name="PART_Border"
                                                Margin="2,0,2,0"
                                                Padding="5,0,5,0"
                                                Background="#E7EAED"
                                                CornerRadius="5">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition />
                                                        <ColumnDefinition Width="auto" />
                                                    </Grid.ColumnDefinitions>
                                                    <ContentControl x:Name="PART_TagContent" Content="{Binding TagContent}">
                                                        <i:Interaction.Triggers>
                                                            <i:EventTrigger EventName="MouseLeftButtonUp">
                                                                <i:InvokeCommandAction Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type rs:RSMultiSelectTextBox}}, Path=TagSelectCommand}" CommandParameter="{Binding BindsDirectlyToSource=True}" />
                                                            </i:EventTrigger>
                                                        </i:Interaction.Triggers>
                                                    </ContentControl>
                                                    <Border
                                                        x:Name="PART_IconHost"
                                                        Grid.Column="1"
                                                        Width="8"
                                                        Height="8"
                                                        Margin="2,0,2,0"
                                                        Background="Transparent">
                                                        <i:Interaction.Triggers>
                                                            <i:EventTrigger EventName="MouseLeftButtonUp">
                                                                <i:InvokeCommandAction Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type rs:RSMultiSelectTextBox}}, Path=TagCloseCommand}" CommandParameter="{Binding BindsDirectlyToSource=True}" />
                                                            </i:EventTrigger>
                                                        </i:Interaction.Triggers>
                                                        <Path
                                                            x:Name="PART_Icon"
                                                            Data="{StaticResource RSApp.Icons.Close}"
                                                            Fill="#4D182B40"
                                                            Stretch="Fill" />
                                                    </Border>

                                                </Grid>
                                            </Border>
                                            <DataTemplate.Triggers>
                                                <Trigger SourceName="PART_Border" Property="IsMouseOver" Value="True">
                                                    <Setter Property="Cursor" Value="Hand" />
                                                    <Setter Property="Opacity" Value="0.8" />
                                                </Trigger>

                                                <Trigger SourceName="PART_IconHost" Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="PART_Icon" Property="Fill" Value="#CC182B40" />
                                                </Trigger>

                                                <DataTrigger Binding="{Binding IsSelect}" Value="True">
                                                    <Setter TargetName="PART_Border" Property="Background" Value="#305BD2" />
                                                    <Setter TargetName="PART_TagContent" Property="Foreground" Value="#FFFFFF" />
                                                    <Setter TargetName="PART_Icon" Property="Fill" Value="#FFFFFF" />

                                                </DataTrigger>
                                            </DataTemplate.Triggers>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <ToggleButton
                                    x:Name="PART_More"
                                    Grid.Column="1"
                                    Padding="0"
                                    rs:ControlsHelper.IconData="{StaticResource RSApp.Icons.Ellipsis}"
                                    Style="{StaticResource RSApp.Styles.IconButtonStyle}" />

                                <ScrollViewer
                                    x:Name="PART_ContentHost"
                                    Grid.Column="2"
                                    Margin="0"
                                    Focusable="false"
                                    HorizontalScrollBarVisibility="{TemplateBinding HorizontalScrollBarVisibility}"
                                    VerticalScrollBarVisibility="{TemplateBinding VerticalScrollBarVisibility}" />

                            </Grid>

                            <Button
                                x:Name="PART_BtnClear"
                                Grid.Column="2"
                                Margin="0"
                                Padding="5,3,5,3"
                                HorizontalAlignment="Right"
                                rs:ControlsHelper.IconData="{StaticResource RSApp.Icons.Close}"
                                rs:ControlsHelper.IconHeight="12"
                                rs:ControlsHelper.IconWidth="12"
                                Foreground="#949494"
                                Style="{StaticResource RSApp.Styles.IconButtonStyle}"
                                ToolTip="清除输入框内容"
                                Visibility="Collapsed" />
                            <ContentControl
                                x:Name="PART_RightContent"
                                Grid.Column="3"
                                Background="Transparent"
                                Content="{TemplateBinding rs:TextBoxHelper.RightContent}"
                                FontSize="{TemplateBinding FontSize}"
                                Foreground="{TemplateBinding rs:TextBoxHelper.WatermarkForground}" />
                        </Grid>
                    </Border>


                    <ControlTemplate.Triggers>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsMouseOver" Value="True" />
                                <Condition Property="rs:TextBoxHelper.IsShowClearButton" Value="True" />
                            </MultiTrigger.Conditions>
                            <Setter TargetName="PART_BtnClear" Property="Visibility" Value="Visible" />
                        </MultiTrigger>
                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=Self}, Path=(rs:TextBoxHelper.IsShowClearButton)}" Value="False">
                            <Setter TargetName="PART_BtnClear" Property="Visibility" Value="Collapsed" />
                        </DataTrigger>

                        <Trigger Property="HasContent" Value="True">
                            <Setter TargetName="PART_Watermark" Property="Visibility" Value="Collapsed" />
                        </Trigger>

                        <Trigger Property="HasContent" Value="False">
                            <Setter TargetName="PART_Watermark" Property="Visibility" Value="Visible" />
                            <Setter TargetName="PART_BtnClear" Property="Visibility" Value="Collapsed" />
                        </Trigger>
                        <Trigger Property="Validation.HasError" Value="True">
                            <Setter Property="BorderBrush" Value="Transparent" />
                        </Trigger>

                        <Trigger Property="IsMouseOver" Value="False">
                            <Setter TargetName="PART_BtnClear" Property="Visibility" Value="Collapsed" />
                        </Trigger>

                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Background" Value="#eee" />
                            <Setter Property="Foreground" Value="#949494" />
                        </Trigger>

                        <Trigger Property="IsReadOnly" Value="True">
                            <Setter TargetName="PART_BtnClear" Property="Visibility" Value="Collapsed" />
                        </Trigger>

                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=Self}, Path=(rs:TextBoxHelper.RightContent)}" Value="{x:Null}">
                            <Setter TargetName="PART_RightContent" Property="Visibility" Value="Collapsed" />
                        </DataTrigger>

                        <Trigger Property="IsShowBtnClear" Value="True">
                            <Setter TargetName="PART_BtnClear" Property="Visibility" Value="Visible" />
                        </Trigger>

                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=Self}, Path=TagModelList.Count, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Value="0">
                            <Setter TargetName="PART_More" Property="Visibility" Value="Collapsed" />
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>