<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:RS.Widgets.Converters"
    xmlns:model="clr-namespace:RS.Widgets.Models"
    xmlns:rs="clr-namespace:RS.Widgets.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/RS.Widgets;component/Styles/Controls.Button.xaml" />
        <ResourceDictionary Source="pack://application:,,,/RS.Widgets;component/Styles/Controls.Effects.xaml" />
        <ResourceDictionary Source="pack://application:,,,/RS.Widgets;component/Styles/Controls.Icons.xaml" />
        <ResourceDictionary Source="pack://application:,,,/RS.Widgets;component/Styles/Controls.TextBlock.xaml" />
        <ResourceDictionary Source="pack://application:,,,/RS.Widgets;component/Styles/Controls.TextBox.xaml" />
    </ResourceDictionary.MergedDictionaries>
    <converters:ClipConverter x:Key="ClipConverter" />
    <converters:BackgroundToForegroundConverter x:Key="BackgroundToForegroundConverter" />

    <ControlTemplate x:Key="DayViewTemplate" TargetType="{x:Type rs:RSCalendarDatePicker}">
        <Border
            x:Name="PART_Border"
            Padding="{TemplateBinding Padding}"
            Background="{TemplateBinding Background}"
            BorderBrush="{TemplateBinding BorderBrush}"
            BorderThickness="{TemplateBinding BorderThickness}"
            CornerRadius="{TemplateBinding CornerRadius}">
            <Grid />
        </Border>
    </ControlTemplate>

    <ControlTemplate x:Key="MonthViewTemplate" TargetType="{x:Type rs:RSCalendarDatePicker}">
        <Border
            x:Name="PART_Border"
            Padding="{TemplateBinding Padding}"
            Background="{TemplateBinding Background}"
            BorderBrush="{TemplateBinding BorderBrush}"
            BorderThickness="{TemplateBinding BorderThickness}"
            CornerRadius="{TemplateBinding CornerRadius}">
            <Grid />
        </Border>
    </ControlTemplate>


    <ControlTemplate x:Key="YearViewTemplate" TargetType="{x:Type rs:RSCalendarDatePicker}">
        <Border
            x:Name="PART_Border"
            Padding="{TemplateBinding Padding}"
            Background="{TemplateBinding Background}"
            BorderBrush="{TemplateBinding BorderBrush}"
            BorderThickness="{TemplateBinding BorderThickness}"
            CornerRadius="{TemplateBinding CornerRadius}">
            <Grid />
        </Border>
    </ControlTemplate>


    <Style TargetType="{x:Type rs:RSCalendarDatePicker}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="#eee" />
        <Setter Property="Margin" Value="5,2,5,2" />
        <Setter Property="MinWidth" Value="70" />
        <Setter Property="MinHeight" Value="32" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <!--<Setter Property="CornerRadius" Value="3" />-->
        <!--<Setter Property="DateTimeFormat" Value="yyyy-MM-dd HH:mm:ss" />-->
        <Setter Property="rs:TextBoxHelper.IsShowClearButton" Value="True" />
        <Setter Property="rs:TextBoxHelper.Watermark" Value="请选择日期" />
        <Setter Property="Foreground" Value="{DynamicResource RSApp.Styles.Button.Foreground}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type rs:RSCalendarDatePicker}">
                    <Border
                        x:Name="PART_Border"
                        Padding="{TemplateBinding Padding}"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding CornerRadius}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Border
                                Grid.Row="0"
                                BorderBrush="#eee"
                                BorderThickness="0,0,0,1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition Width="auto" />
                                    </Grid.ColumnDefinitions>
                                    <Button
                                        x:Name="PART_Title"
                                        HorizontalContentAlignment="Left"
                                        Content="1952年3月"
                                        Style="{StaticResource RSApp.Styles.ButtonBaseStyle}" />
                                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                                        <Button
                                            Padding="8"
                                            rs:ControlsHelper.IconData="{StaticResource RSApp.Icons.MenuItemUpArrow}"
                                            rs:ControlsHelper.IconHeight="15"
                                            rs:ControlsHelper.IconWidth="11"
                                            Foreground="#1B1B1B"
                                            Style="{StaticResource RSApp.Styles.IconButtonStyle}" />
                                        <Button
                                            Padding="8"
                                            rs:ControlsHelper.IconData="{StaticResource RSApp.Icons.MenuItemDownArrow}"
                                            rs:ControlsHelper.IconHeight="15"
                                            rs:ControlsHelper.IconWidth="11"
                                            Foreground="#1B1B1B"
                                            Style="{StaticResource RSApp.Styles.IconButtonStyle}" />
                                    </StackPanel>
                                </Grid>
                            </Border>
                            <Canvas x:Name="PART_Canvas" Grid.Row="1" />
                        </Grid>

                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <!--<Style.Triggers>
            <Trigger Property="CalendarViewType" Value="Day">
                <Setter Property="Template" Value="{StaticResource DayViewTemplate}" />
            </Trigger>
            <Trigger Property="CalendarViewType" Value="Month">
                <Setter Property="Template" Value="{StaticResource MonthViewTemplate}" />
            </Trigger>
            <Trigger Property="CalendarViewType" Value="Year">
                <Setter Property="Template" Value="{StaticResource YearViewTemplate}" />
            </Trigger>
        </Style.Triggers>-->
    </Style>
</ResourceDictionary>