                                                                <LineBreak />
                                                                <Run Text="01（0x01） - 读取线圈状态 " />
                                                                <LineBreak />
                                                                <Run Text="02（0x02） - 读取离散输入 " />
                                                                <LineBreak />
                                                                <Run Text="03（0x03） - 读取保持寄存器 " />
                                                                <LineBreak />
                                                                <Run Text="04（0x04） - 读取输入寄存器 " />
                                                                <LineBreak />
                                                                <Run Text="05（0x05） - 强制单个线圈 " />
                                                                <LineBreak />
                                                                <Run Text="06（0x06） - 预置单个寄存器 " />
                                                                <LineBreak />
