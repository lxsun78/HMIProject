<rs:RSDialog
    x:Class="RS.WPFClient.Views.UserView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RS.WPFClient.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:rs="https://github.com/luo-ross/MultiVerseKit"
    xmlns:viewModel="clr-namespace:RS.WPFClient.ViewModels"
    x:Name="this"
    d:DataContext="{d:DesignInstance Type=viewModel:UserViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <rs:RSDialog.Resources>
        <ResourceDictionary>
            <rs:EmailMaskConverter x:Key="EmailMaskConverter" />
            <rs:BindingProxy x:Key="BindingProxy" Data="{Binding}" />
        </ResourceDictionary>
    </rs:RSDialog.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <GroupBox BorderThickness="1,1,1,0">
                <GroupBox.Header>
                    <Grid>
                        <TextBlock Text="查询条件" />
                    </Grid>
                </GroupBox.Header>
                <Border Grid.Row="0" Padding="3,8,3,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="50" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="70" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            HorizontalAlignment="Right"
                            Foreground="#949494"
                            Text="邮箱" />
                        <TextBox
                            Grid.Column="1"
                            rs:TextBoxHelper.IsShowClearButton="True"
                            rs:TextBoxHelper.Watermark="请输入邮箱"
                            Text="{Binding ModelSearch.Email}" />
                        <TextBlock
                            Grid.Column="2"
                            HorizontalAlignment="Right"
                            Foreground="#949494"
                            Text="昵称" />
                        <TextBox
                            Grid.Column="3"
                            rs:TextBoxHelper.IsShowClearButton="True"
                            rs:TextBoxHelper.Watermark="请输入昵称"
                            Text="{Binding ModelSearch.NickName}" />
                        <TextBlock
                            Grid.Column="4"
                            HorizontalAlignment="Right"
                            Foreground="#949494"
                            Text="是否禁用" />
                        <ComboBox
                            Grid.Column="5"
                            rs:TextBoxHelper.IsShowClearButton="True"
                            rs:TextBoxHelper.Watermark="是否禁用"
                            DisplayMemberPath="KeyDes"
                            ItemsSource="{Binding IsDisableSelectList}"
                            SelectedValue="{Binding ModelSearch.IsDisabled}"
                            SelectedValuePath="Key" />
                    </Grid>
                </Border>
            </GroupBox>

            <GroupBox Grid.Row="1" BorderThickness="1,0,1,1">
                <GroupBox.Header>
                    <Grid>
                        <TextBlock Text="用户列表" />
                    </Grid>
                </GroupBox.Header>
                <rs:RSDataGrid
                    x:Name="UserDataGrid"
                    rs:ScrollViewHelper.DisableScroll="True"
                    ItemsSource="{Binding ModelList, UpdateSourceTrigger=PropertyChanged}"
                    PaginationCommand="{Binding PaginationCommand}"
                    SelectedItem="{Binding ModelSelect}"
                    UpdateCommand="{Binding UpdateCommand}"
                    VirtualizingPanel.IsVirtualizing="True">
                    <rs:RSDataGrid.RowStyle>
                        <Style BasedOn="{StaticResource RSApp.Styles.DataGridRowStyle}" TargetType="{x:Type DataGridRow}">
                            <Setter Property="ContextMenu">
                                <Setter.Value>
                                    <ContextMenu DataContext="{Binding Data, Source={StaticResource BindingProxy}}">
                                        <MenuItem
                                            x:Name="PART_BtnAdd"
                                            Command="{Binding Source={StaticResource BindingProxy}, Path=Data.AddCommand}"
                                            Header="新增数据"
                                            InputGestureText="Alt+A" />
                                        <MenuItem
                                            x:Name="PART_BtnDelete"
                                            Command="{Binding Source={StaticResource BindingProxy}, Path=Data.DeleteCommand}"
                                            CommandParameter="{Binding Source={StaticResource BindingProxy}, Path=Data.ModelSelect}"
                                            Header="删除数据"
                                            InputGestureText="Alt+D" />
                                        <MenuItem
                                            x:Name="PART_BtnUpdate"
                                            Command="{Binding Source={StaticResource BindingProxy}, Path=Data.UpdateCommand}"
                                            CommandParameter="{Binding Source={StaticResource BindingProxy}, Path=Data.ModelSelect}"
                                            Header="修改数据"
                                            InputGestureText="Alt+U" />
                                        <MenuItem
                                            x:Name="PART_BtnDetails"
                                            Command="{Binding Source={StaticResource BindingProxy}, Path=Data.DetailsCommand}"
                                            CommandParameter="{Binding Source={StaticResource BindingProxy}, Path=Data.ModelSelect}"
                                            Header="查看详情"
                                            InputGestureText="Alt+V" />

                                        <MenuItem
                                            x:Name="PART_BtnEnable"
                                            Command="{Binding Source={StaticResource BindingProxy}, Path=Data.UserEnableCommand}"
                                            CommandParameter="{Binding Source={StaticResource BindingProxy}, Path=Data.ModelSelect}"
                                            Header="启用用户" />

                                        <MenuItem
                                            x:Name="PART_BtnDisable"
                                            Command="{Binding Source={StaticResource BindingProxy}, Path=Data.UserDisableCommand}"
                                            CommandParameter="{Binding Source={StaticResource BindingProxy}, Path=Data.ModelSelect}"
                                            Header="禁用用户" />

                                        <MenuItem
                                            x:Name="PART_BtnExport"
                                            Command="{Binding Source={StaticResource BindingProxy}, Path=Data.ExportCommand}"
                                            CommandParameter="{Binding Source={StaticResource BindingProxy}, Path=Data.ModelList}"
                                            Header="导出数据"
                                            InputGestureText="Alt+E" />
                                    </ContextMenu>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </rs:RSDataGrid.RowStyle>

                    <rs:RSDataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Email, Converter={StaticResource EmailMaskConverter}}" Header="邮箱" />
                        <DataGridTextColumn Binding="{Binding NickName}" Header="昵称" />
                        <DataGridTemplateColumn Header="是否禁用">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ToggleButton
                                        HorizontalAlignment="Left"
                                        IsChecked="{Binding IsDisabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, TargetNullValue=False}"
                                        IsEnabled="False"
                                        Style="{StaticResource RSApp.Styles.ToggleSwitchStyle}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Binding="{Binding CreateTime, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}" Header="创建时间" />
                        <DataGridTextColumn Width="*" />
                    </rs:RSDataGrid.Columns>
                </rs:RSDataGrid>
            </GroupBox>
        </Grid>
        <Border
            Grid.Column="1"
            BorderBrush="#eee"
            BorderThickness="0,1,1,1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0">
                    <Button
                        HorizontalAlignment="Stretch"
                        Command="{Binding SearchCommand}"
                        Style="{StaticResource RSApp.Styles.DefaultButton}"
                        ToolTip="查询">
                        <AccessText Text="查询(_H)" />
                    </Button>
                    <Button
                        HorizontalAlignment="Stretch"
                        Command="{Binding SearchClearCommand}"
                        Style="{StaticResource RSApp.Styles.DefaultButton}"
                        ToolTip="高级查询">
                        <AccessText Text="高级查询(_A)" />
                    </Button>
                    <Button
                        HorizontalAlignment="Stretch"
                        Command="{Binding SearchClearCommand}"
                        Style="{StaticResource RSApp.Styles.DefaultButton}"
                        ToolTip="清除条件">
                        <AccessText Text="清除条件(_R)" />
                    </Button>

                    <Grid Margin="0,90,0,0">
                        <Button
                            HorizontalAlignment="Stretch"
                            Command="{Binding AddCommand}"
                            Style="{StaticResource RSApp.Styles.DefaultButton}"
                            ToolTip="快捷键Alt+N">
                            <AccessText Text="新增数据(_N)" />
                        </Button>
                    </Grid>

                    <Button
                        HorizontalAlignment="Stretch"
                        Command="{Binding DeleteCommand}"
                        CommandParameter="{Binding ModelSelect}"
                        Style="{StaticResource RSApp.Styles.DefaultButton}"
                        ToolTip="快捷键Alt+D">
                        <AccessText Text="删除数据(_D)" />
                    </Button>
                    <Button
                        HorizontalAlignment="Stretch"
                        Command="{Binding UpdateCommand}"
                        CommandParameter="{Binding ModelSelect}"
                        Style="{StaticResource RSApp.Styles.DefaultButton}"
                        ToolTip="快捷键Alt+U">
                        <AccessText Text="修改数据(_U)" />
                    </Button>


                    <Button
                        HorizontalAlignment="Stretch"
                        Command="{Binding DetailsCommand}"
                        CommandParameter="{Binding ModelSelect}"
                        Style="{StaticResource RSApp.Styles.DefaultButton}"
                        ToolTip="快捷键Alt+V">
                        <AccessText Text="查看数据(_V)" />
                    </Button>

                    <Button
                        HorizontalAlignment="Stretch"
                        Command="{Binding UserEnableCommand}"
                        CommandParameter="{Binding ModelSelect}"
                        Content="用户启用"
                        Style="{StaticResource RSApp.Styles.DefaultButton}" />

                    <Button
                        HorizontalAlignment="Stretch"
                        Command="{Binding UserDisableCommand}"
                        CommandParameter="{Binding ModelSelect}"
                        Content="用户禁用"
                        Style="{StaticResource RSApp.Styles.DefaultButton}" />

                    <Button
                        HorizontalAlignment="Stretch"
                        Command="{Binding ExportCommand}"
                        CommandParameter="{Binding ModelList}"
                        Content="数据导出"
                        Style="{StaticResource RSApp.Styles.DefaultButton}" />

                </StackPanel>

                <StackPanel Grid.Row="2">
                    <Button
                        HorizontalAlignment="Stretch"
                        Command="{Binding CloseCommand}"
                        Style="{StaticResource RSApp.Styles.DefaultButton}"
                        ToolTip="快捷键Alt+C">
                        <AccessText Text="关闭(_C)" />
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>

</rs:RSDialog>
