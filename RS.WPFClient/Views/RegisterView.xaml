<rs:RSDialog
    x:Class="RS.WPFClient.Client.Views.RegisterView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:RS.WPFClient.Client.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:RS.WPFClient.Client.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:rs="https://github.com/luo-ross/MultiVerseKit"
    xmlns:viewModel="clr-namespace:RS.WPFClient.Client.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewModel:RegisterViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="500"
    mc:Ignorable="d">

    <Grid Background="#fff">
        <Grid>
            <Grid Margin="28,30,28,50">
                <StackPanel
                    x:Name="PART_Register"
                    Margin="0,40,0,0"
                    Orientation="Vertical">
                    <StackPanel.Style>
                        <Style TargetType="{x:Type StackPanel}">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding TaskStatus}" Value="RegisterForm">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>

                    <TextBlock
                        Margin="8,0,0,0"
                        HorizontalAlignment="Center"
                        FontSize="22"
                        Foreground="#333"
                        Text="注册" />

                    <TextBox
                        Margin="0,50,0,5"
                        Padding="3,5,3,5"
                        rs:ControlsHelper.IconData="{StaticResource RSApp.Icons.User}"
                        rs:TextBoxHelper.IsShowClearButton="True"
                        rs:TextBoxHelper.Watermark="请输入用户名"
                        MaxLength="30"
                        Style="{StaticResource RSApp.Styles.IconTextBox}"
                        Text="{Binding SignUpModel.Email, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" />

                    <PasswordBox
                        Margin="0,5,0,5"
                        Padding="3,5,3,5"
                        rs:ControlsHelper.IconData="{StaticResource RSApp.Icons.Password}"
                        rs:PasswordBoxBindBehavior.Password="{Binding SignUpModel.Password, UpdateSourceTrigger=LostFocus, ValidatesOnNotifyDataErrors=True}"
                        rs:TextBoxHelper.IsShowClearButton="True"
                        rs:TextBoxHelper.Watermark="请输入密码"
                        MaxLength="30"
                        Style="{StaticResource RSApp.Styles.PasswordBoxTextBox}" />

                    <PasswordBox
                        Margin="0,5,0,5"
                        Padding="3,5,3,5"
                        rs:ControlsHelper.IconData="{StaticResource RSApp.Icons.Password}"
                        rs:PasswordBoxBindBehavior.Password="{Binding SignUpModel.PasswordConfirm, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"
                        rs:TextBoxHelper.IsShowClearButton="True"
                        rs:TextBoxHelper.Watermark="请输入确认密码"
                        MaxLength="30"
                        Style="{StaticResource RSApp.Styles.PasswordBoxTextBox}" />

                    <Button
                        Margin="0,30,0,0"
                        Command="{Binding SignUpRequestCommand}"
                        Content="下一步"
                        Style="{StaticResource RSApp.Styles.LoginButtonStyle}" />

                </StackPanel>

                <Border x:Name="PART_EmailVerify" Background="#fff">
                    <Border.Style>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding TaskStatus}" Value="EmailVerify">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <StackPanel Margin="0,40,0,0" Orientation="Vertical">
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="25"
                            Text="邮箱验证" />

                        <TextBlock
                            Margin="0,20,0,0"
                            HorizontalAlignment="Center"
                            FontSize="12"
                            Foreground="#949494"
                            Text="请查看邮箱获取验证码" />

                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="12"
                            Foreground="#949494"
                            Text="{Binding SignUpModel.Email}" />

                        <ItemsControl
                            Margin="0,30,0,0"
                            HorizontalAlignment="Center"
                            ItemsSource="{Binding VerifyCodeModelList}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBox Style="{StaticResource RSApp.Styles.VerifyCodeInputStyle}" Text="{Binding Text, UpdateSourceTrigger=PropertyChanged}">
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="PreviewKeyDown">
                                                <i:InvokeCommandAction Command="{Binding VerifyCodeKeyDownCommand}" CommandParameter="{Binding}" />
                                            </i:EventTrigger>
                                            <i:EventTrigger EventName="TextChanged">
                                                <i:InvokeCommandAction Command="{Binding VerifyCodeTextChangedCommand}" CommandParameter="{Binding}" />
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                        <i:Interaction.Behaviors>
                                            <rs:TextBoxBehavior IsFocused="{Binding IsFocused}" />
                                        </i:Interaction.Behaviors>
                                    </TextBox>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <Button
                            x:Name="BtnVerifyConfirm"
                            Width="{Binding ElementName=PART_VerifyCodeHost, Path=ActualWidth}"
                            Margin="3,35,3,0"
                            Command="{Binding VerifyConfirmCommand}"
                            Content="确认"
                            Style="{StaticResource RSApp.Styles.LoginButtonStyle}" />

                        <TextBlock
                            Margin="0,15,0,0"
                            HorizontalAlignment="Center"
                            FontSize="12"
                            Foreground="{StaticResource RSApp.Styles.Danger}">
                            <Run Text="剩余时间" />
                            <Run Text="{Binding RemainingTime, StringFormat='{}{0:F0}'}" />
                            <Run Text="秒" />
                        </TextBlock>
                    </StackPanel>
                </Border>
            </Grid>
            <Button
                x:Name="BtnReturn"
                Margin="5,5,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                rs:ControlsHelper.IconData="{StaticResource RSApp.Icons.Return}"
                Command="{Binding ReturnCommand}"
                Style="{StaticResource RSApp.Styles.IconButtonStyle}"
                ToolTip="返回" />
        </Grid>


        <Grid x:Name="PART_RegisterSuccess" Background="#fff">
            <Grid.Style>
                <Style TargetType="{x:Type Grid}">
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding TaskStatus}" Value="RegisterSuccess">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
            <StackPanel Margin="28,100,28,100">
                <Path
                    x:Name="PART_Icon"
                    Width="45"
                    Height="45"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Data="{StaticResource RSApp.Icons.Checked}"
                    Fill="#06b025"
                    Stretch="Fill" />
                <TextBlock
                    Margin="0,30,0,0"
                    HorizontalAlignment="Center"
                    FontSize="22"
                    Foreground="#333"
                    Text="注册成功" />

                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="12"
                    Foreground="#949494"
                    Text="请点击下面按钮返回登录界面" />
            </StackPanel>
            <Button
                x:Name="BtnReturnLogin"
                Margin="28,35,28,100"
                VerticalAlignment="Bottom"
                Command="{Binding ReturnLoginCommand}"
                Content="返回登录"
                Style="{StaticResource RSApp.Styles.LoginButtonStyle}" />
        </Grid>
    </Grid>
</rs:RSDialog>
