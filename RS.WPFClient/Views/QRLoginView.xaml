<rs:RSDialog
    x:Class="RS.WPFClient.Client.Views.QRLoginView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behavior="clr-namespace:RS.WPFClient.Client.Behaviors"
    xmlns:controls="clr-namespace:RS.WPFClient.Client.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:RS.WPFClient.Client.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:rs="https://github.com/luo-ross/MultiVerseKit"
    xmlns:viewModel="clr-namespace:RS.WPFClient.Client.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewModel:QRLoginViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid x:Name="PART_LoginHost" Margin="28,20,28,50">
            <Border
                x:Name="PART_QRCodeLoginArea"
                Padding="28,30,28,50"
                Background="#fff">
                <rs:RSQRCodeLogin
                    x:Name="QRCodeLogin"
                    Margin="0,25,0,0"
                    CancelQRCodeLoginAction="{Binding CancelQRCodeLoginAction}"
                    GetLoginQRCodeAsyncFunc="{Binding GetLoginQRCodeAsyncFunc}"
                    QRCodeAuthLoginSuccessAction="{Binding QRCodeAuthLoginSuccessAction}"
                    QRCodeHeight="200"
                    QRCodeWidth="200"
                    QueryQRCodeLoginStatusAsyncFunc="{Binding QueryQRCodeLoginStatusAsyncFunc}" />
            </Border>
        </Grid>
        <Button
            Width="35"
            Height="35"
            Margin="5,5,5,5"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Command="{Binding PasswordLoginCommand}"
            Style="{StaticResource RSApp.Styles.PasswordLoginStyle}"
            WindowChrome.IsHitTestVisibleInChrome="True" />
    </Grid>
</rs:RSDialog>
