<UserControl
    x:Class="RS.WPFClient.Views.SearchView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behavior="clr-namespace:RS.WPFClient.Behaviors"
    xmlns:converter="clr-namespace:RS.WPFClient.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:enums="clr-namespace:RS.WPFClient.Enums"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:RS.WPFClient.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:RS.WPFClient.Models"
    xmlns:rs="https://github.com/luo-ross/MultiVerseKit"
    xmlns:viewModel="clr-namespace:RS.WPFClient.ViewModels"
    x:Name="this"
    d:DataContext="{d:DesignInstance Type=viewModel:SearchViewModel}"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converter:DateFilterTypeConverter x:Key="DateFilterTypeConverter" />
        <converter:SearchTypeConverter x:Key="SearchTypeConverter" />
        <converter:LocationTypeConverter x:Key="LocationTypeConverter" />
        <converter:FolderTypeConverter x:Key="FolderTypeConverter" />
        <converter:AttachmentTypeConverter x:Key="AttachmentTypeConverter" />
        <converter:ReadUnReadTypeConverter x:Key="ReadUnReadTypeConverter" />
        <SolidColorBrush x:Key="BorderBrush">#0F7AF5</SolidColorBrush>

        <Style
            x:Key="AdvancedSearchTextBoxStyle"
            BasedOn="{StaticResource RSApp.Styles.TextBoxStyle}"
            TargetType="{x:Type TextBox}">
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderThickness" Value="1" />
                    <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style
            x:Key="TextBlockDesStyle"
            BasedOn="{StaticResource RSApp.Styles.FormTextBlockStyle}"
            TargetType="{x:Type TextBlock}">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Foreground" Value="#333333" />
        </Style>

        <DataTemplate DataType="{x:Type enums:SearchType}">
            <TextBlock Style="{StaticResource TextBlockDesStyle}" Text="{Binding Converter={StaticResource SearchTypeConverter}}" />
        </DataTemplate>

        <DataTemplate DataType="{x:Type enums:DateFilterType}">
            <TextBlock Style="{StaticResource TextBlockDesStyle}" Text="{Binding Converter={StaticResource DateFilterTypeConverter}}" />
        </DataTemplate>

        <DataTemplate DataType="{x:Type enums:LocationType}">
            <TextBlock Style="{StaticResource TextBlockDesStyle}" Text="{Binding Converter={StaticResource LocationTypeConverter}}" />
        </DataTemplate>

        <DataTemplate DataType="{x:Type enums:FolderType}">
            <TextBlock Style="{StaticResource TextBlockDesStyle}" Text="{Binding Converter={StaticResource FolderTypeConverter}}" />
        </DataTemplate>

        <DataTemplate DataType="{x:Type enums:AttachmentType}">
            <TextBlock Style="{StaticResource TextBlockDesStyle}" Text="{Binding Converter={StaticResource AttachmentTypeConverter}}" />
        </DataTemplate>

        <DataTemplate DataType="{x:Type enums:ReadUnReadType}">
            <TextBlock Style="{StaticResource TextBlockDesStyle}" Text="{Binding Converter={StaticResource ReadUnReadTypeConverter}}" />
        </DataTemplate>

