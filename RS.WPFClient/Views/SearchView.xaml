        <DataTemplate x:Key="SearchTypeSelectDataTemplate" DataType="{x:Type enums:SearchType}">
            <StackPanel Orientation="Horizontal">
                <Path
                    Grid.Column="0"
                    Width="16"
                    Height="16"
                    Margin="10,0,0,0"
                    HorizontalAlignment="Left"
                    Data="{StaticResource RSApp.Icons.Search}"
                    Fill="#515151"
                    Stretch="Fill" />
                <TextBlock
                    Margin="10,0,0,0"
                    FontSize="14"
                    Foreground="#333333"
                    Text="{Binding Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource SearchTypeConverter}}" />
                <Path
                    Grid.Column="0"
                    Width="8"
                    Height="5"
                    Margin="5,0,5,0"
                    HorizontalAlignment="Left"
                    Data="{StaticResource RSApp.Icons.DownArrow}"
                    Fill="#515151"
                    Stretch="Fill" />
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="ComboxItemFilterDataTemplate">
            <Border
                x:Name="PART_Border"
                Padding="5,2,5,2"
                Background="Transparent">
                <Border
                    x:Name="PART_Bg"
                    Padding="5"
                    CornerRadius="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>

                        <ContentControl Content="{Binding}" />
                        <Path
                            x:Name="PART_CheckIcon"
                            Grid.Column="2"
                            Width="15"
                            Height="10"
                            Margin="5,0,5,0"
                            Data="{StaticResource RSApp.Icons.CheckMark}"
                            Fill="{Binding ElementName=PART_DateFilterTypeDes, Path=Foreground}"
                            Stretch="Fill"
                            Visibility="Collapsed" />
                    </Grid>
                </Border>
            </Border>
            <DataTemplate.Triggers>

                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ComboBoxItem}}, Path=IsSelected}" Value="True">
                    <Setter TargetName="PART_CheckIcon" Property="Visibility" Value="Visible" />
                    <Setter TargetName="PART_Bg" Property="Background" Value="#F3F4F6" />
                </DataTrigger>

                <DataTrigger Binding="{Binding}" Value="-1">
                    <Setter TargetName="PART_Border" Property="BorderThickness" Value="0,0,0,1" />
                    <Setter TargetName="PART_Border" Property="BorderBrush" Value="#eeeeee" />
                </DataTrigger>

                <DataTrigger Binding="{Binding}" Value="-2">
                    <Setter TargetName="PART_Border" Property="BorderThickness" Value="0,1,0,0" />
                    <Setter TargetName="PART_Border" Property="BorderBrush" Value="#eeeeee" />
                </DataTrigger>

                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Cursor" Value="Hand" />
                    <Setter TargetName="PART_Bg" Property="Background" Value="#F3F4F6" />
                </Trigger>
            </DataTemplate.Triggers>
        </DataTemplate>


        <DataTemplate x:Key="ComboBoxSelectDataTemplate">
            <ContentControl Content="{Binding}" />
        </DataTemplate>

    </UserControl.Resources>
    <i:Interaction.Behaviors>
        <behavior:SearchViewBehavior HideSearchCommand="{Binding HideSearchCommand, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
    </i:Interaction.Behaviors>
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="PreviewMouseLeftButtonUp">
            <i:InvokeCommandAction Command="{Binding SearchViewPreviewMouseLeftButtonUpCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid>
        <Border
            x:Name="PART_Border"
            Grid.Column="0"
            CornerRadius="10">
            <Border.Style>
                <Style TargetType="{x:Type Border}">
                    <Style.Triggers>
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding RelativeSource={RelativeSource Mode=Self}, Path=IsMouseOver}" Value="True" />
                                <Condition Binding="{Binding IsShowSearch}" Value="False" />
                            </MultiDataTrigger.Conditions>
                            <Setter Property="Cursor" Value="IBeam" />
                        </MultiDataTrigger>
                        <DataTrigger Binding="{Binding IsShowSearch, UpdateSourceTrigger=PropertyChanged}" Value="False">
                            <Setter Property="Background" Value="#DBE3ED" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsShowSearch, UpdateSourceTrigger=PropertyChanged}" Value="True">
                            <Setter Property="Background" Value="#FFFFFF" />
                            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
                            <Setter Property="BorderThickness" Value="1" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <Path
                    Grid.Column="0"
                    Width="16"
                    Height="16"
                    Margin="10,0,0,0"
                    HorizontalAlignment="Left"
                    Data="{StaticResource RSApp.Icons.Search}"
                    Fill="#515151"
                    Stretch="Fill">
                    <Path.Style>
                        <Style TargetType="{x:Type Path}">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsShowSearch, UpdateSourceTrigger=PropertyChanged}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Path.Style>
                </Path>

                <ComboBox
                    x:Name="PART_SearchType"
                    rs:ComboBoxHelper.SelectionBoxItemTemplate="{StaticResource SearchTypeSelectDataTemplate}"
                    IsDropDownOpen="{Binding IsSearchTypeChecked}"
                    ItemsSource="{Binding SearchTypeList}"
                    SelectedItem="{Binding SearchTypeSelect}">
                    <ComboBox.Style>
                        <Style TargetType="{x:Type ComboBox}">
                            <Setter Property="OverridesDefaultStyle" Value="True" />
                            <Setter Property="Background" Value="#F3F4F6" />
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Setter Property="rs:ControlsHelper.CornerRadius" Value="10,0,0,10" />
                            <Setter Property="rs:ComboBoxHelper.SelectionBoxItemTemplate" Value="{Binding RelativeSource={RelativeSource Mode=Self}, Path=SelectionBoxItemTemplate}" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type ComboBox}">
                                        <Border
                                            Padding="{TemplateBinding Padding}"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="{TemplateBinding rs:ControlsHelper.CornerRadius}">
                                            <Grid>
                                                <rs:RSDropdown
                                                    rs:ControlsHelper.CornerRadius="10,0,0,10"
                                                    Content="{TemplateBinding SelectionBoxItem}"
                                                    ContentTemplate="{TemplateBinding rs:ComboBoxHelper.SelectionBoxItemTemplate}"
                                                    ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                    DropdownWidth="200"
                                                    Focusable="false"
                                                    IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}">
                                                    <rs:RSDropdown.DropdownContent>
                                                        <Grid x:Name="DropDown">
                                                            <ScrollViewer>
                                                                <VirtualizingStackPanel
                                                                    Margin="5"
                                                                    IsItemsHost="True"
                                                                    KeyboardNavigation.DirectionalNavigation="Contained" />
                                                            </ScrollViewer>
                                                        </Grid>
                                                    </rs:RSDropdown.DropdownContent>
                                                </rs:RSDropdown>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsShowSearch, UpdateSourceTrigger=PropertyChanged}" Value="True">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E8EAEE" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ComboBox.Style>
                    <ComboBox.ItemContainerStyle>
                        <Style TargetType="{x:Type ComboBoxItem}">
                            <Setter Property="OverridesDefaultStyle" Value="true" />
                            <Setter Property="IsSelected" Value="{Binding IsSelect, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type ComboBoxItem}">
                                        <Border
                                            x:Name="Border"
                                            Padding="{TemplateBinding Padding}"
                                            Background="{TemplateBinding Background}">
                                            <ContentPresenter />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ComboBox.ItemContainerStyle>
                </ComboBox>

                <TextBox
                    x:Name="PART_TxtSearch"
                    Grid.Column="1"
                    Margin="8,0,0,0"
                    rs:TextBoxHelper.Watermark="搜索"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    CaretBrush="{Binding ElementName=PART_SearchChecked, Path=BorderBrush}"
                    FontSize="14"
                    Text="{Binding SearchContent}">
                    <TextBox.Style>
                        <Style BasedOn="{StaticResource RSApp.Styles.TextBoxStyle}" TargetType="{x:Type TextBox}">
                            <Setter Property="IsReadOnly" Value="True" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsShowSearch}" Value="True">
                                    <Setter Property="IsReadOnly" Value="False" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Loaded">
                            <i:InvokeCommandAction Command="{Binding TxtSearchLoadedCommand}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </TextBox>

                <rs:RSDropdown
                    x:Name="PART_AdvancedSearch"
                    Grid.Column="2"
                    Height="28"
                    Margin="0,0,5,0"
                    Padding="8,0,8,0"
                    VerticalAlignment="Stretch"
                    rs:ControlsHelper.CornerRadius="8"
                    DropdownWidth="{Binding ElementName=PART_Border, Path=ActualWidth, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                    IsChecked="{Binding IsAdvancedSearchChecked}"
                    PlacementTarget="{Binding ElementName=PART_Border}">
                    <rs:RSDropdown.Style>
                        <Style TargetType="{x:Type rs:RSDropdown}">
                            <Setter Property="Background" Value="#DAEBFD" />
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#C0DCFC" />
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#A8CFFB" />
                                </Trigger>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter Property="Background" Value="#DAEBFD" />
                                </Trigger>
                                <DataTrigger Binding="{Binding IsShowSearch, UpdateSourceTrigger=PropertyChanged}" Value="True">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </rs:RSDropdown.Style>
                    <rs:RSDropdown.Content>
                        <StackPanel Orientation="Horizontal">
                            <Path
                                Grid.Column="0"
                                Width="12"
                                Height="11"
                                Margin="5,0,0,0"
                                HorizontalAlignment="Left"
                                Data="M2 4.625C2 4.28 2.28 4 2.625 4h10.75a.625.625 0 1 1 0 1.25H2.625A.625.625 0 0 1 2 4.625m1 5C3 9.28 3.28 9 3.625 9h8.75a.625.625 0 1 1 0 1.25h-8.75A.625.625 0 0 1 3 9.625M4.625 14a.625.625 0 1 0 0 1.25h6.75a.625.625 0 1 0 0-1.25z"
                                Fill="{Binding ElementName=PART_Border, Path=BorderBrush}"
                                Stretch="Fill" />
                            <TextBlock
                                Margin="5,0,0,0"
                                FontSize="14"
                                Foreground="{Binding ElementName=PART_Border, Path=BorderBrush}"
                                Text="高级搜索" />
                        </StackPanel>
                    </rs:RSDropdown.Content>
                    <rs:RSDropdown.DropdownContent>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0" Margin="10,10,5,2">
                                <TextBlock
                                    FontSize="13"
                                    Foreground="#949494"
                                    Text="高级搜索" />
                            </Grid>
                            <ScrollViewer Grid.Row="1">
                                <Grid Margin="10">
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Style="{StaticResource TextBlockDesStyle}"
                                        Text="关键字" />

                                    <TextBox
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        rs:TextBoxHelper.Watermark="请输入"
                                        Style="{StaticResource AdvancedSearchTextBoxStyle}" />


                                    <TextBlock
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        Style="{StaticResource TextBlockDesStyle}"
                                        Text="关键字位置" />

                                    <ComboBox
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        rs:ComboBoxHelper.SelectionBoxItemTemplate="{StaticResource ComboBoxSelectDataTemplate}"
                                        rs:ControlsHelper.CornerRadius="5"
                                        ItemContainerStyle="{StaticResource RSApp.Styles.ComboBoxItemBaseStyle}"
                                        ItemTemplate="{StaticResource ComboxItemFilterDataTemplate}"
                                        ItemsSource="{Binding LocationTypeList}"
                                        SelectedItem="{Binding LocationType}" />

                                    <TextBlock
                                        Grid.Row="2"
                                        Grid.Column="0"
                                        Style="{StaticResource TextBlockDesStyle}"
                                        Text="发件人" />

                                    <TextBox
                                        Grid.Row="2"
                                        Grid.Column="1"
                                        rs:TextBoxHelper.Watermark="请输入"
                                        Style="{StaticResource AdvancedSearchTextBoxStyle}" />


                                    <TextBlock
                                        Grid.Row="3"
                                        Grid.Column="0"
                                        Style="{StaticResource TextBlockDesStyle}"
                                        Text="收件人" />

                                    <TextBox
                                        Grid.Row="3"
                                        Grid.Column="1"
                                        rs:TextBoxHelper.Watermark="请输入"
                                        Style="{StaticResource AdvancedSearchTextBoxStyle}" />


                                    <TextBlock
                                        Grid.Row="4"
                                        Grid.Column="0"
                                        Style="{StaticResource TextBlockDesStyle}"
                                        Text="时间" />

                                    <ComboBox
                                        Grid.Row="4"
                                        Grid.Column="1"
                                        rs:ComboBoxHelper.SelectionBoxItemTemplate="{StaticResource ComboBoxSelectDataTemplate}"
                                        rs:ControlsHelper.CornerRadius="5"
                                        ItemContainerStyle="{StaticResource RSApp.Styles.ComboBoxItemBaseStyle}"
                                        ItemTemplate="{StaticResource ComboxItemFilterDataTemplate}"
                                        ItemsSource="{Binding DateFilterTypeList}"
                                        SelectedItem="{Binding DateFilterTypeSelect}" />

                                    <TextBlock
                                        Grid.Row="5"
                                        Grid.Column="0"
                                        Style="{StaticResource TextBlockDesStyle}"
                                        Text="所在文件夹" />

                                    <ComboBox
                                        Grid.Row="5"
                                        Grid.Column="1"
                                        rs:ComboBoxHelper.SelectionBoxItemTemplate="{StaticResource ComboBoxSelectDataTemplate}"
                                        rs:ControlsHelper.CornerRadius="5"
                                        ItemContainerStyle="{StaticResource RSApp.Styles.ComboBoxItemBaseStyle}"
                                        ItemTemplate="{StaticResource ComboxItemFilterDataTemplate}"
                                        ItemsSource="{Binding FolderTypeList}"
                                        SelectedItem="{Binding FolderTypeSelect}" />


                                    <TextBlock
                                        Grid.Row="6"
                                        Grid.Column="0"
                                        Style="{StaticResource TextBlockDesStyle}"
                                        Text="是否包含附件" />

                                    <ComboBox
                                        Grid.Row="6"
                                        Grid.Column="1"
                                        rs:ComboBoxHelper.SelectionBoxItemTemplate="{StaticResource ComboBoxSelectDataTemplate}"
                                        rs:ControlsHelper.CornerRadius="5"
                                        ItemContainerStyle="{StaticResource RSApp.Styles.ComboBoxItemBaseStyle}"
                                        ItemTemplate="{StaticResource ComboxItemFilterDataTemplate}"
                                        ItemsSource="{Binding AttachmentTypeList}"
                                        SelectedItem="{Binding AttachmentTypeSelect}" />

                                    <TextBlock
                                        Grid.Row="7"
                                        Grid.Column="0"
                                        Style="{StaticResource TextBlockDesStyle}"
                                        Text="已读/未读" />

                                    <ComboBox
                                        Grid.Row="7"
                                        Grid.Column="1"
                                        rs:ComboBoxHelper.SelectionBoxItemTemplate="{StaticResource ComboBoxSelectDataTemplate}"
                                        rs:ControlsHelper.CornerRadius="5"
                                        ItemContainerStyle="{StaticResource RSApp.Styles.ComboBoxItemBaseStyle}"
                                        ItemTemplate="{StaticResource ComboxItemFilterDataTemplate}"
                                        ItemsSource="{Binding ReadUnReadTypeList}"
                                        SelectedItem="{Binding ReadUnReadTypeSelect}" />

                                </Grid>
                            </ScrollViewer>

                            <Border
                                Grid.Row="2"
                                Padding="5,5,5,5"
                                BorderBrush="#EEE"
                                BorderThickness="0,1,0,0">
                                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                                    <Button
                                        Command="{Binding SearchCommand}"
                                        Content="搜索"
                                        Style="{StaticResource RSApp.Styles.PrimaryButton}" />
                                    <Button
                                        Command="{Binding SearchCancelCommand}"
                                        Content="取消"
                                        Style="{StaticResource RSApp.Styles.DefaultButton}" />
                                </StackPanel>
                            </Border>
                        </Grid>
                    </rs:RSDropdown.DropdownContent>
                </rs:RSDropdown>
            </Grid>
        </Border>
    </Grid>
</UserControl>
