<rs:RSWindow
    x:Class="RS.WPFClient.Views.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behavior="clr-namespace:RS.WPFClient.Behaviors"
    xmlns:controls="clr-namespace:RS.WPFClient.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:RS.WPFClient.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:RS.WPFClient.Models"
    xmlns:rs="https://github.com/luo-ross/MultiVerseKit"
    xmlns:view="clr-namespace:RS.WPFClient.Views"
    xmlns:viewModel="clr-namespace:RS.WPFClient.ViewModels"
    x:Name="this"
    Title="上位机客户端"
    MinWidth="800"
    MinHeight="500"
    d:DataContext="{d:DesignInstance Type=viewModel:HomeViewModel}"
    d:DesignHeight="1000"
    d:DesignWidth="1920"
    CornerRadius="5"
    Icon="/Assets/login-bg.jpg"
    IsFitSystem="True"
    IsMaxsizedFullScreen="{Binding ElementName=CkIsFullScreen, Path=IsChecked}"
    IsShowIcon="False"
    IsShowTitle="False"
    IsShowWinBtnCommands="False"
    IsUseCornerRadius="False"
    ResizeMode="CanResizeWithGrip"
    WinBtnCommandMargin="0,0,10,0"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <rs:RSWindow.Resources>
        <ResourceDictionary>
            <rs:ForegroundColorConverter x:Key="ForegroundColorConverter" />
            <rs:ClipConverter x:Key="ClipConverter" />
            <rs:IconKeyConverter x:Key="IconKeyConverter" />
            <rs:EnumConverter x:Key="EnumConverter" />
            <SolidColorBrush x:Key="RSApp.SolidColorBrush.EBEBEB">#EBEBEB</SolidColorBrush>






        </ResourceDictionary>
    </rs:RSWindow.Resources>



    <Grid Background="#E6EDF5">
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Border
            Grid.Row="0"
            Padding="0,0,15,0"
            WindowChrome.IsHitTestVisibleInChrome="True">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <StackPanel
                    Grid.Column="0"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <Image
                        Width="50"
                        Height="50"
                        Source="/Assets/MultiVerseKitLogo.png"
                        Stretch="Fill" />
                    <TextBlock
                        FontSize="18"
                        FontWeight="Black"
                        Foreground="#0A72EB"
                        Text="MultiVerseKit" />
                </StackPanel>

                <Grid Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*">
                                <ColumnDefinition.Style>
                                    <Style TargetType="{x:Type ColumnDefinition}">
                                        <Setter Property="MinWidth" Value="230" />
                                        <Setter Property="MaxWidth" Value="500" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SearchViewModel.IsShowSearch}" Value="True">
                                                <Setter Property="MaxWidth" Value="800" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ColumnDefinition.Style>
                            </ColumnDefinition>
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>

                        <local:SearchView
                            Height="36"
                            Margin="0,0,10,0"
                            DataContext="{Binding SearchViewModel}" />
                    </Grid>

                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <rs:RSDropdown
                            Height="40"
                            Padding="5,0,5,0"
                            VerticalAlignment="Stretch">
                            <rs:RSDropdown.Style>
                                <Style TargetType="{x:Type rs:RSDropdown}">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#DBE3ED" />
                                        </Trigger>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter Property="Background" Value="#D1DAE4" />
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#D1DAE4" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </rs:RSDropdown.Style>
                            <rs:RSDropdown.Content>
                                <StackPanel Orientation="Horizontal">
                                    <Border
                                        Width="32"
                                        Height="32"
                                        CornerRadius="50">
                                        <Border.Background>
                                            <ImageBrush ImageSource="/Assets/login-left.jpg" />
                                        </Border.Background>
                                    </Border>

                                    <TextBlock
                                        Margin="3,0,0,0"
                                        Foreground="#707070"
                                        Text="">
                                        <Run FontSize="14" Text="行云游者" />
                                        <Run FontSize="12" Text="•" />
                                        <Run FontSize="12" Text="1845960295@qq.com" />
                                    </TextBlock>

                                    <Button
                                        Padding="5,0,5,0"
                                        rs:ControlsHelper.CornerRadius="3"
                                        Background="#e1e2e3"
                                        Content="普通用户"
                                        Style="{StaticResource RSApp.Styles.MenuButtonStyle}" />
                                </StackPanel>
                            </rs:RSDropdown.Content>
                            <rs:RSDropdown.DropdownContent>

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition Height="auto" />
                                    </Grid.RowDefinitions>

                                    <Border Grid.Row="0" Padding="5">
                                        <StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock FontSize="14" Text="行云游者" />
                                                <Button
                                                    Padding="5,0,5,0"
                                                    rs:ControlsHelper.CornerRadius="3"
                                                    Background="#e1e2e3"
                                                    Content="成为 VIP"
                                                    Style="{StaticResource RSApp.Styles.MenuButtonStyle}" />
                                            </StackPanel>


                                            <TextBlock
                                                Foreground="#949494"
                                                Text="1845960295@qq.com"
                                                ToolTip="复制邮箱地址">
                                                <TextBlock.InputBindings>
                                                    <MouseBinding Command="{Binding CopyEmailCommand}" Gesture="LeftClick" />
                                                </TextBlock.InputBindings>
                                                <TextBlock.Style>
                                                    <Style BasedOn="{StaticResource RSApp.Styles.TextBlockStyle}" TargetType="{x:Type TextBlock}">
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="TextDecorations" Value="Underline" />
                                                                <Setter Property="Cursor" Value="Hand" />
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>


                                            <Button
                                                Padding="8"
                                                rs:ControlsHelper.IconData="{StaticResource RSApp.Icons.VIP}"
                                                BorderBrush="#C5BFFA"
                                                BorderThickness="1"
                                                Command="{Binding OpenMembershipCommand}"
                                                Content="开通VIP会员，让邮箱更好用"
                                                FontSize="12"
                                                Foreground="MediumPurple"
                                                Style="{StaticResource RSApp.Styles.AccessButtonStyle}" />

                                            <Separator
                                                Height="1"
                                                Margin="0,2,0,5"
                                                Background="#E6EDF5" />

                                            <StackPanel>
                                                <Button
                                                    Command="{Binding AddAccountCommand}"
                                                    Content="添加账号"
                                                    Style="{StaticResource RSApp.Styles.IconWithDesButton}" />
                                                <Button
                                                    Command="{Binding AccountSecurityCommand}"
                                                    Content="账号与安全"
                                                    Style="{StaticResource RSApp.Styles.MenuButtonStyle}" />
                                                <Button
                                                    Command="{Binding HelpCenterCommand}"
                                                    Content="帮助中心"
                                                    Style="{StaticResource RSApp.Styles.MenuButtonStyle}" />
                                                <Button
                                                    Command="{Binding FeedbackCommand}"
                                                    Content="意见反馈"
                                                    Style="{StaticResource RSApp.Styles.MenuButtonStyle}" />
                                                <Button
                                                    Command="{Binding OldEmailCommand}"
                                                    Content="旧版邮箱"
                                                    Style="{StaticResource RSApp.Styles.MenuButtonStyle}" />
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>


                                    <Border
                                        Grid.Row="1"
                                        Padding="5"
                                        Background="#f8f8f9">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="auto" />
                                                <ColumnDefinition />
                                                <ColumnDefinition Width="auto" />
                                            </Grid.ColumnDefinitions>

                                            <Button
                                                rs:ControlsHelper.IconColor="MediumPurple"
                                                rs:ControlsHelper.IconData="{StaticResource RSApp.Icons.VIP}"
                                                Command="{Binding MembershipCenterCommand}"
                                                Content="会员中心"
                                                Style="{StaticResource RSApp.Styles.IconWithDesButton}" />

                                            <Button
                                                Grid.Column="2"
                                                rs:ControlsHelper.IconData="{StaticResource RSApp.Icons.Exit}"
                                                Command="{Binding LogoutCommand}"
                                                Content="退出"
                                                Style="{StaticResource RSApp.Styles.IconWithDesButton}" />
                                        </Grid>
                                    </Border>

                                </Grid>

                            </rs:RSDropdown.DropdownContent>
                        </rs:RSDropdown>




                        <Button
                            Height="40"
                            Padding="12,0,12,0"
                            VerticalAlignment="Stretch"
                            rs:ControlsHelper.IconData="{StaticResource RSApp.Icons.Setting}"
                            rs:ControlsHelper.IconHeight="20"
                            rs:ControlsHelper.IconWidth="20"
                            Content="设置"
                            FontSize="14"
                            Foreground="#707070">
                            <Button.Style>
                                <Style BasedOn="{StaticResource RSApp.Styles.IconButtonStyle}" TargetType="{x:Type Button}">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#DBE3ED" />
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#D1DAE4" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>


                </Grid>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" />
            <Border
                Grid.Column="1"
                Margin="0,0,15,0"
                Background="#fff"
                CornerRadius="10,10,0,0">
                <ScrollViewer Focusable="False" />
            </Border>
        </Grid>
    </Grid>
</rs:RSWindow>
