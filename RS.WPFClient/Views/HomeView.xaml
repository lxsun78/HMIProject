<rs:RSWindow
    x:Class="RS.WPFClient.Views.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behavior="clr-namespace:RS.WPFClient.Behaviors"
    xmlns:controls="clr-namespace:RS.WPFClient.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:RS.WPFClient.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:RS.WPFClient.Models"
    xmlns:rs="https://github.com/luo-ross/MultiVerseKit"
    xmlns:view="clr-namespace:RS.WPFClient.Views"
    xmlns:viewModel="clr-namespace:RS.WPFClient.ViewModels"
    x:Name="this"
    Title="上位机客户端"
    MinWidth="800"
    MinHeight="500"
    d:DataContext="{d:DesignInstance Type=viewModel:HomeViewModel}"
    d:DesignHeight="1000"
    d:DesignWidth="1920"
    CornerRadius="5"
    Icon="/Assets/login-bg.jpg"
    IsFitSystem="True"
    IsMaxsizedFullScreen="{Binding ElementName=CkIsFullScreen, Path=IsChecked}"
    IsShowIcon="False"
    IsShowTitle="False"
    IsShowWinBtnCommands="False"
    IsUseCornerRadius="False"
    ResizeMode="CanResizeWithGrip"
    WinBtnCommandMargin="0,0,10,0"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <rs:RSWindow.Resources>
        <ResourceDictionary>
            <rs:ForegroundColorConverter x:Key="ForegroundColorConverter" />
            <rs:ClipConverter x:Key="ClipConverter" />
            <rs:IconKeyConverter x:Key="IconKeyConverter" />
            <rs:EnumConverter x:Key="EnumConverter" />
            <SolidColorBrush x:Key="RSApp.SolidColorBrush.EBEBEB">#EBEBEB</SolidColorBrush>
        </ResourceDictionary>
    </rs:RSWindow.Resources>



    <Grid Background="#E6EDF5">
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Border
            Grid.Row="0"
            Padding="0,0,15,0"
            WindowChrome.IsHitTestVisibleInChrome="True">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <StackPanel
                    Grid.Column="0"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <Image
                        Width="50"
                        Height="50"
                        Source="/Assets/MultiVerseKitLogo.png"
                        Stretch="Fill" />
                    <TextBlock
                        FontSize="18"
                        FontWeight="Black"
                        Foreground="#0A72EB"
                        Text="MultiVerseKit" />
                </StackPanel>

                <Grid Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition
                                Width="*"
                                MinWidth="230"
                                MaxWidth="500" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>

                        <local:SearchView Height="36" DataContext="{Binding SearchViewModel}" />
                    </Grid>

                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <ToggleButton
                            x:Name="PART_TogBtnUserInfo"
                            Height="40"
                            Padding="5,0,5,0"
                            VerticalAlignment="Stretch">
                            <ToggleButton.Style>
                                <Style BasedOn="{StaticResource RSApp.Styles.ButtonBase}" TargetType="{x:Type ToggleButton}">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#DBE3ED" />
                                        </Trigger>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter Property="Background" Value="#D1DAE4" />
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#D1DAE4" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ToggleButton.Style>
                            <StackPanel Orientation="Horizontal">
                                <Border
                                    Width="32"
                                    Height="32"
                                    CornerRadius="50">
                                    <Border.Background>
                                        <ImageBrush ImageSource="/Assets/login-left.jpg" />
                                    </Border.Background>
                                </Border>

                                <TextBlock
                                    Margin="3,0,0,0"
                                    Foreground="#707070"
                                    Text="">
                                    <Run FontSize="14" Text="行云游者" />
                                    <Run FontSize="12" Text="•" />
                                    <Run FontSize="12" Text="1845960295@qq.com" />
                                </TextBlock>
                            </StackPanel>
                        </ToggleButton>

                        <Button
                            Height="40"
                            Padding="12,0,12,0"
                            VerticalAlignment="Stretch"
                            rs:ControlsHelper.IconData="{StaticResource RSApp.Icons.Setting}"
                            rs:ControlsHelper.IconHeight="20"
                            rs:ControlsHelper.IconWidth="20"
                            Content="设置"
                            FontSize="14"
                            Foreground="#707070">
                            <Button.Style>
                                <Style BasedOn="{StaticResource RSApp.Styles.IconButtonStyle}" TargetType="{x:Type Button}">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#DBE3ED" />
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#D1DAE4" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>

                    <rs:RSPopup
                        x:Name="PART_UserPopup"
                        AllowsTransparency="True"
                        Focusable="False"
                        HorizontalOffset="-3"
                        IsOpen="{Binding ElementName=PART_TogBtnUserInfo, Path=IsChecked, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                        Placement="Bottom"
                        PlacementTarget="{Binding ElementName=PART_TogBtnUserInfo}"
                        PopupAnimation="None"
                        SnapsToDevicePixels="True"
                        StaysOpen="False"
                        VerticalOffset="-3">
                        <Border Margin="15" Effect="{StaticResource RSApp.Styles.DefaultEffect}">
                            <Border
                                x:Name="DropDownBorder"
                                MinWidth="{Binding ElementName=PART_TogBtnUserInfo, Path=ActualWidth}"
                                MinHeight="200"
                                Margin="5"
                                Background="#FFF"
                                CornerRadius="5">
                                <Grid />
                            </Border>
                        </Border>

                    </rs:RSPopup>
                </Grid>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" />
            <Border
                Grid.Column="1"
                Margin="0,0,15,0"
                Background="#fff"
                CornerRadius="10,10,0,0">
                <ScrollViewer>
                    <!--<ContentControl Height="5000" Content="{Binding}" />-->
                    <!--<rs:RSDateTimePicker />-->



                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</rs:RSWindow>
